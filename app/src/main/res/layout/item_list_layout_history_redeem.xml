<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cv"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginTop="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/ijoSukses"
            >
        <TextView
            android:id="@+id/Status_history"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/berhasil"
            android:padding="3dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:cardElevation="8dp"
            >

        <TextView
            android:id="@+id/history_tanggal"
            android:textAlignment="center"
            android:text=""
            android:padding="3dp"
            android:textSize="20sp"
            android:textColor="@color/abuTua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/garis"
        app:layout_constraintTop_toBottomOf="@+id/LL1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/LL2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="12dp"
        android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/LL2"
            app:layout_constraintTop_toBottomOf="@+id/garis"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                >
                <TextView
                    android:id="@+id/tv_nama_penukar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_penukar"
                    android:textSize="20sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/LL3"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@+id/LL2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            >
            <TextView
                android:id="@+id/tv_tukar_point_ke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/penukaran_ke_shopeepay"
                android:textSize="20sp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/LL4"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/LL3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                >
                <TextView
                    android:id="@+id/tv_jml_point_tukar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jumlah_penukaran"
                    android:textSize="20sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL5"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/LL4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                >
                <TextView
                    android:id="@+id/tv_no_tujuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nomor_tujuan"
                    android:textSize="20sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL6"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@+id/LL5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                >
                <TextView
                    android:id="@+id/SNHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sn"
                    android:textSize="20sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>