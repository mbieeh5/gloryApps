<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
        android:id="@+id/cv"
        android:focusable="true"
        android:clickable="true"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        >

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/d_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/samsung_s20_ultra_plus"
            android:textSize="22sp"
        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/phI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:text="@string/in"
                    android:textSize="20sp"
                    />
        <TextView
            android:id="@+id/d_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:text="@string/_31_12_2022"
            android:textSize="20sp"
            />
                <TextView
                    android:id="@+id/phO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:text="@string/out"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    />
        <TextView
            android:id="@+id/d_tglK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:text=""
            android:textSize="20sp"
            />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/deskripsi"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_kerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_Kerjaan"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/d_kerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/ibnu"
            android:textSize="20sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_penerima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/penerima"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/d_terima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rraf"
                android:textStyle="bold"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/d_rsk"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ganti_lcd_sama_pasang_batre_sama_ganti_simtray"
                android:textSize="20sp"
                />
        </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_hrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/harga"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_Rp_hrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/d_hrg"
            android:text="@string/rp"
            android:textSize="20sp"
            />
        <TextView
                android:id="@+id/d_hrg"
                android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:text="@string/_220_000"
                android:textSize="20sp"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/statusTxt"
            android:enabled="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/orange_base_250"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="@string/edit"
            />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>